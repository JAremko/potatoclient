# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Clojure files
[*.{clj,cljs,cljc,edn}]
indent_style = space
indent_size = 2

# Kotlin files
[*.{kt,kts}]
indent_style = space
indent_size = 4

# Java files
[*.java]
indent_style = space
indent_size = 4

# Protocol Buffer files
[*.proto]
indent_style = space
indent_size = 2

# Makefiles
[{Makefile,makefile,*.mk}]
indent_style = tab

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2